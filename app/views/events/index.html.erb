<h1>Event List</h1>
<ul>
  <% @events.each do |e| %>
      <li>
        <%= e.name %>
        <%= link_to 'show', :controller => 'events', :action => 'show', :id => e %>
        <%= link_to 'edit', :controller => 'events', :action => 'edit', :id => e %>
        <%= link_to 'destroy', :controller => 'events', :action => 'destroy', :id => e %>
      </li>
  <% end %>
</ul>

